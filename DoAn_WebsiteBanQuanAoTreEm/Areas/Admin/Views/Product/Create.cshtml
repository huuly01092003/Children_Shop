@model DoAn_WebsiteBanQuanAoTreEm.Models.QuanAo

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/Admin_LayoutPage1.cshtml";
}

<h2>Tạo sản phẩm mới</h2>

@using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Tên sản phẩm</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.tenSP, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.tenSP, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Hình ảnh</label>
        <div class="col-md-10">
            <input type="file" name="imageFile" id="imageFile" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Chủ đề</label>
        <div class="col-md-10">
            <select id="maLoai" name="maLoai">

                <option>Chọn chủ đề</option>
                @if (ViewBag.Loai != null)
                {
                    foreach (var category in ViewBag.Loai)
                    {
                        <option value="@category.maLoai">@category.tenLoai</option>
                    }
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Giới tính</label>
        <div class="col-md-10">
            @*<select id="gioiTinh" name="gioiTinh">
            @{
                var distinctGenders = new List<string>();
                foreach (var s in ViewBag.Gen)
                {
                    if (!distinctGenders.Contains(s.gioiTinh))
                    {
                        distinctGenders.Add(s.gioiTinh);
                    }
                }
            }
            @foreach (var gender in distinctGenders)
            {


                <option value="@gender">@gender</option>

            }
        </select>*@
            @{
                var defaultGenders = new List<string> { "Nam", "Nữ" };
                string selectedGender = ""; // You can set the default selected value here, e.g., "Nam"
            }

            @Html.DropDownList("gioiTinh", new SelectList(defaultGenders, selectedGender))
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Giá bán</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.giaBan, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.giaBan, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Mô tả</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.moTa, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.moTa, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Trạng thái</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.trangThai, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.trangThai, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Màu</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.mau, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.mau, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Size</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.size, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.size, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Trở lại trang sản phẩm", "Index","product","admin")
</div>

