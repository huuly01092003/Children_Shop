@model DoAn_WebsiteBanQuanAoTreEm.Models.LoaiQuanAo

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/Admin_LayoutPage1.cshtml";
}

<div class="container-md my-4">
    <h2>@ViewBag.Title</h2>
    <form action="/Admin/category/update/@Model.maLoai" method="post" style="width:600px;" class="mx-2">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <input type="hidden" class="form-control" id="maLoai" name="maLoai" value="@Model.maLoai">
        </div>
        <div class="form-group">
            <label for="tenLoai">Tên chủ đề</label>
            <input type="text" class="form-control" id="tenLoai" name="tenLoai" value="@Model.tenLoai">
        </div>
        <button type="submit" class="btn btn-success">Cập nhật</button>
        <a href="/admin/category/index" class="mx-5">Cancel</a>
    </form>
</div>
